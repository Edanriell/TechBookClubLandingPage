{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"],
	"compilerOptions": {
		"strictNullChecks": true,
		"baseUrl": "./src",
		"paths": {
			"@app/*": ["app/*"],
			"@astro-pages/*": ["astro-pages/*"],
			"@widgets/*": ["widgets/*"],
			"@shared/*": ["shared/*"],
			"@public/*": ["../public/*"]
		}
	}
}
