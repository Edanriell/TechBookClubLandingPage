---
import Icon from "../../../shared/ui/icon/ui/icon";

interface Props {
	count: 1 | 2 | 3 | 4 | 5;
	loading?: "eager" | "lazy";
	decoding?: "async" | "auto" | "sync";
}

const { count, loading, decoding } = Astro.props;

const starsCount = Math.max(1, Math.min(5, count));
---

<ol class="score-list">
	{Array.from({ length: starsCount }).map(() => (
			<li class="score-list__item">
				<Icon loading={loading} decoding={decoding} iconType="star" width={16} height={15} />
			</li>
	))}
</ol>

<style lang="less">
	.score-list {
		display: flex;
		flex-direction: row;
		align-items: center;
		column-gap: 8rem;
	}

	.score-list__item {
		flex: 0 0 auto;
	}

	.score-list__score-icon {
		width: 16rem;
		height: 15rem;
	}
</style>