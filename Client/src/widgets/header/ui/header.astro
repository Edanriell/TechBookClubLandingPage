---
import { Image } from "astro:assets";

import logotypeImage from "@public/images/vector/logotype.svg"
---

<header class="header">
	<div class="header__logotype logotype">
		<Image loading="eager" class="logotype__image" src={logotypeImage} alt="Company logotype" width="31" height="36"/>
		<p class="logotype__text">
			<span>Tech</span>
			<span>book</span>
			<span>club</span>
		</p>
	</div>
</header>

<style lang="less">
	.header {
		position: relative;
		z-index: 3;
		padding: 0 16rem;
		margin: 24rem 0 48rem 0;

		@media (width >= 768px) {
			padding: 0 32rem;
			margin: 32rem 0 64rem 0;
		}

		@media (width >= 1440px) {
			padding: 0 135rem;
			margin: 32rem 0 80rem 0;
		}
	}

	.header__logotype {
		position: relative;
		user-select: none;
		pointer-events: none;
	}

	.logotype {
		display: flex;
		flex-direction: row;
		align-items: center;
		column-gap: 14rem;
	}

	.logotype__image  {
		width: 31rem;
		height: 36rem;
	}

	.logotype__text {
		display: flex;
		flex-direction: row;
		align-items: center;
		column-gap: 5rem;
		font-family: var(--font3), sans-serif;
		font-weight: 600;
		font-size: 20rem;
		letter-spacing: -0.06em;
		color: var(--colors-neutral-900);
	}
</style>