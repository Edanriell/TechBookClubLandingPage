---
import { Image } from "astro:assets";
---

<ul class="social-links">
	<li class="social-links__link">
		<a href="#">
			<span class="visually-hidden">Butterfly company logotype</span>
			<Image class="logotype__image" src={butterflyLogotypeImage} alt="Butterfly company logotype" width="22" height="22"/>
		</a>
	</li>
	<li class="social-links__link">
		<a href="#">
			<span class="visually-hidden">LinkedIn company logotype</span>
			<Image class="logotype__image" src={linkedInLogotypeImage} alt="LinkedIn company logotype" width="22" height="22"/>
		</a>
	</li>
</ul>

<style lang="less">
	.social-links {
		display: flex;
		flex-direction: row;
		column-gap: 24rem;
		align-items: center;
	}

	.social-links__link {
		position: relative;
	}
</style>